.content-header
    h2.content-title Hello Evano <span class="hello">👋🏼</span>,
.content-main
    .container
        .customers-content
            .customers-content-header
                .customers-content-header-left
                    h3.customers-title All Customers
                    span.status Active Members
                .customers-content-header-right
                    form(action="#").search-form
                        button(type="submit").btn-search
                            include ../img/search.svg 
                        input(type="text" placeholder="Search").i-text
            .customers-content-main
                .customers-table-wrapp
                    table.table
                        thead.table-header
                            tr.table-row
                                th.table-header-title Customer Name
                                th.table-header-title Company
                                th.table-header-title Phone Number
                                th.table-header-title Email
                                th.table-header-title Country
                                th.table-header-title.status Status
                        tbody.table-main
            .customers-content-footer
                .showing-data Showing data 1 to 8 of  256K entries
                .pagination
                    ul.pagination-list
                        li.pagination-item.prev
                            button#pagination-prev
                                include ../img/chevron.svg
                        li.pagination-item
                            button#pagination1 1
                        li.pagination-item
                            button#pagination2 2
                        li.pagination-item.next
                            button#pagination-next
                                include ../img/chevron.svg